{
    "name": "proudcommerce/picturewall",
    "description": "Event Photo Collection and Display System",
    "type": "project",
    "require": {
        "php": ">=8.2"
    },
    "autoload": {
        "psr-4": {
            "Picturewall\\": "src/"
