RewriteEngine On

# Security Headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# Deny access to sensitive files
<FilesMatch "\.(env|log|ini|conf)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Deny access to .env files (including .env.example, .env.local, etc.)
<FilesMatch "^\.env">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Handle static assets - MUST be first to avoid conflicts
RewriteRule ^assets/ - [L]
RewriteRule ^[a-z0-9-]+/assets/(.*)$ assets/$1 [L]

# Handle data directory (photos and logos) - MUST be before event routes
# Allow direct access to data directory files
RewriteRule ^data/ - [L]

# Handle API routes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^api/(.*)$ api/$1 [L]

# Handle admin routes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^admin/(.*)$ admin/$1 [L]

# Handle event display routes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([a-z0-9-]+)/display/?$ display.php?event_slug=$1 [L,QSA]

# Handle event gallery routes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([a-z0-9-]+)/gallery/?$ gallery.php?event_slug=$1 [L,QSA]

# Handle display routes (fallback)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^display/(.*)$ display.php [L]

# Handle event routes (only for exact event slug, not subdirectories)
# This rule should only match exact event slugs, not subdirectories
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([a-z0-9-]+)/?$ index.php?event_slug=$1 [L,QSA]

# Default route
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [L,QSA]