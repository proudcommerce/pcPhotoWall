# ============================================
# Database Configuration
# ============================================
DB_HOST=db
DB_NAME=photowall
DB_USER=photowall
DB_PASS=photowall

# ============================================
# App Configuration
# ============================================
APP_NAME=pcPhotoWall
APP_URL=http://localhost:4000
APP_ENV=development  # development|production

# ============================================
# Upload Configuration
# ============================================
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp,image/heic,image/heif
DEFAULT_MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
MAX_EXECUTION_TIME=300            # seconds
MEMORY_LIMIT=256M

# ============================================
# Image Processing
# ============================================
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080
IMAGE_QUALITY_HIGH=90
IMAGE_QUALITY_MEDIUM=85
THUMBNAIL_MAX_WIDTH=300
THUMBNAIL_MAX_HEIGHT=300
THUMBNAIL_QUALITY=85

# ============================================
# Display Defaults
# ============================================
DEFAULT_DISPLAY_COUNT=9
DEFAULT_DISPLAY_INTERVAL=5
DEFAULT_DISPLAY_MODE=random  # random|newest|chronological
DEFAULT_GRID_COLUMNS=3

# ============================================
# GPS Configuration
# ============================================
GPS_DEFAULT_RADIUS_METERS=100
DISTANCE_KM_THRESHOLD=1000

# ============================================
# QR Code Configuration
# ============================================
QR_CODE_DEFAULT_SIZE=200
QR_CODE_MARGIN=10

# ============================================
# Security Configuration
# ============================================
# IMPORTANT: Change this password before deploying to production!
ADMIN_PASSWORD=ChangeThisSecurePassword123!
SESSION_TIMEOUT=3600  # 1 hour in seconds
CSRF_TOKEN_NAME=csrf_token

# ============================================
# Logging Configuration
# ============================================
LOG_ERRORS=1
DISPLAY_ERRORS=0  # Set to 1 for development

# ============================================
# MySQL Configuration for Docker
# ============================================
# IMPORTANT: Change these passwords before deploying to production!
MYSQL_ROOT_PASSWORD=ChangeThisRootPassword123!
MYSQL_DATABASE=photowall
MYSQL_USER=photowall
MYSQL_PASSWORD=photowall